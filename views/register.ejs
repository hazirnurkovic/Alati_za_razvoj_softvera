    <form class="register_form" method="POST" action="/register" onsubmit="return validateForm()">
        <div class="rectangle">
            <h1 class="Text2">
                Register
            </h1>
            <div class="EmailBoxPosition">
                <input class="textfield" type="text" id="name" name="name" placeholder="Name" required>
            </div>
            <div class="EmailBoxPosition">
                <input class="textfield" type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div class="PasswordBoxPosition">
                <input class="textfield" type="password" id="pass" name="pass" placeholder="Password" required>
            </div>
            <div class="PasswordBoxPosition">
                <input class="textfield" type="password" id="cpass" name="cpass" placeholder="Confirm Password"
                    required>
            </div>
            <div class="EmailBoxPosition">
                <input class="textfield" type="number" min="1" max="100" id="age" name="age" placeholder="Age" required>
            </div>
            <div class="EmailBoxPosition">
                <b>Gender:</b><br>
                <input type="radio" id="male" name="gender" value="M" checked> Male <br>
                <input type="radio" id="female" name="gender" value="F"> Female <br>
            </div>
            <div class="SubmitBoxPosition">
                <input type="submit" class="button" value="Submit">
            </div>
        </div>
    </form>
    <script src="register.js"></script>
</body>

</html>